@model IEnumerable<TaskManager.Models.RptTask>

@{
    ViewData["Title"] = "View";
}

<h5>Task Report</h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="GetRptTask">
            <div class="form-group">
             <label for="fname" >Date From:</label>
                <input type="date" id="df" name="df" class="form-control">

                </div>
                 <div class="form-group">
             <label for="lname">Date To:</label>
                <input type="date" id="dt" name="dt" class="form-control">
            </div>

             <div class="form-group">
                <input type="submit" value="Show" class="btn btn-primary" class="form-control"/>
            </div>

        </form>
</div>
</div>


<div class="col-md-12">

    <div class="col-md-4"></div>
    <div class="col-md-8">
        <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assigned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pending)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Completed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartedNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TentDurationHrsC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActualDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TentDurationHrsP)
            </th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assigned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pending)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Completed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartedNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TentDurationHrsC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TentDurationHrsP)
            </td>
           
        </tr>
}
    </tbody>
</table>
    </div>


</div>



